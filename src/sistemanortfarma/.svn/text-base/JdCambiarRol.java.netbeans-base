    }//GEN-LAST:event_jButton1ActionPerformed

    private void jTable1KeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jTable1KeyPressed
        String dni="";
            if( evt.getKeyCode()==10){
                evt.consume();
                llenarDatos();
                jComboBox1.requestFocus();
        }
    }//GEN-LAST:event_jTable1KeyPressed
    private void llenarDatos(){
            String dni=jTable1.getValueAt(jTable1.getSelectedRow(),0).toString();
        String nom=jTable1.getValueAt(jTable1.getSelectedRow(),1).toString();
        String ape=jTable1.getValueAt(jTable1.getSelectedRow(),2).toString();
        String cargo=jTable1.getValueAt(jTable1.getSelectedRow(),3).toString();
        jPanel2.setBorder(javax.swing.BorderFactory.createTitledBorder(null,
                ""+nom+"  "+ape
                , javax.swing.border.TitledBorder.DEFAULT_JUSTIFICATION, javax.swing.border.TitledBorder.DEFAULT_POSITION, new java.awt.Font("Comic Sans MS", 1, 12)));
        jLabel7.setText(dni);
        //jLabel8.setText(nom);
        //jLabel9.setText(ape);
        jLabel12.setText(cargo);
        jBcambiarRol.setEnabled(true);
        jBcambiarRol1.setEnabled(true);

        jPanel5.setBorder(javax.swing.BorderFactory.createTitledBorder(null,
                ""+nom+"  "+ape
                , javax.swing.border.TitledBorder.DEFAULT_JUSTIFICATION, javax.swing.border.TitledBorder.DEFAULT_POSITION, new java.awt.Font("Comic Sans MS", 1, 12)));
        jldnic.setText(dni);
    }
    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTable1MouseClicked
        llenarDatos();
    }//GEN-LAST:event_jTable1MouseClicked

    private void jBcambiarRolActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jBcambiarRolActionPerformed
      int p = JOptionPane.showConfirmDialog(null, "多Esta seguro de Cambiar la Clave? ", "Confirmar",
                            JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
            if (p == JOptionPane.YES_OPTION) {
        LogicaPersonal lh=new LogicaPersonal();
       lh.ActualizaRolPersonal(jComboBox1.getSelectedItem().toString().trim(), jLabel7.getText() );
       JOptionPane.showMessageDialog(null,"Se ha cambiado de Rol Al Personal" , "NORTFARMA", JOptionPane.WARNING_MESSAGE);
        }
    }//GEN-LAST:event_jBcambiarRolActionPerformed


    private void jPasswordField2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jPasswordField2ActionPerformed
        if(jTable1.getSelectedRow()<0){
            JOptionPane.showMessageDialog(null, "Debe seleccionar Personal");
            return;
        }
            this.cambiarclave();
    }//GEN-LAST:event_jPasswordField2ActionPerformed

    private void jBcambiarRolKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jBcambiarRolKeyPressed
        if(evt.getKeyCode()==10){
            int p = JOptionPane.showConfirmDialog(null, "多Esta seguro de Cambiar la Clave? ", "Confirmar",
                            JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
            if (p == JOptionPane.YES_OPTION) {
            LogicaPersonal lh=new LogicaPersonal();
            lh.ActualizaRolPersonal(jComboBox1.getSelectedItem().toString().trim(), jLabel7.getText() );
            JOptionPane.showMessageDialog(null,"Se ha cambiado de Rol Al Personal" , "NORTFARMA", JOptionPane.WARNING_MESSAGE);
            }
        }
        jtextbuscar.requestFocus();
    }//GEN-LAST:event_jBcambiarRolKeyPressed
    private void ListarPersonal(String Busqueda){
        LogicaPersonal lh=new LogicaPersonal();
        List<Personal> listapersonalxx = new ArrayList<Personal>();
        listapersonalxx=lh.ListaPersonalMiBoticaRol(Busqueda);
        DefaultTableModel modelo;
        String titulos[]=new String[4];
        titulos[0]="DNI";
        titulos[1]="Nombres";
        titulos[2]="Apellidos";
        titulos[3]="Rol";
        Object valores[][]=new Object[0][titulos.length];
        modelo=new DefaultTableModel(valores,titulos){
            public boolean isCellEditable(int row, int column) {
                return false;
            }
        };
        for (int i = 0; i < listapersonalxx.size(); i++) {
            String nuevafila[]=new String[4];
                 nuevafila[0]=""+listapersonalxx.get(i).getDNI();
                 nuevafila[1]=""+listapersonalxx.get(i).getNombre();
                 nuevafila[2]=""+listapersonalxx.get(i).getApellido();
                 nuevafila[3]=""+listapersonalxx.get(i).getDescpCargo();
            modelo.addRow(nuevafila);
        }
        jTable1.setModel(modelo);
        this.setAnchoColumnas();

    }
    private void cambiarclave(){
        if(jPasswordField1.getText().equals(jPasswordField2.getText())==false){
                JOptionPane.showMessageDialog(null, "Las Contrase単as deben ser iguales");
                return;
           }
           int p = JOptionPane.showConfirmDialog(null, "多Esta seguro de Cambiar la Clave? ", "Confirmar",
                            JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
            if (p == JOptionPane.YES_OPTION) {
           LogicaPersonal lh=new LogicaPersonal();
           lh.CambiaClavePersonal(jldnic.getText(), jPasswordField1.getText() );
           JOptionPane.showMessageDialog(null,"Se ha cambiado de Clave al Personal" , "NORTFARMA", JOptionPane.WARNING_MESSAGE);
        }
    }
    private void ListarRoles(){
        LogicaPersonal lh=new LogicaPersonal();
        List<Roles> listapersonalxx = new ArrayList<Roles>();
        listapersonalxx=lh.ListaRolesVentas();
        for (int i = 0; i < listapersonalxx.size(); i++) {
            jComboBox1.addItem(listapersonalxx.get(i).Descripcion);
        }
    }

     private void setAnchoColumnas(){
        TableColumnModel modeloColumna = jTable1.getColumnModel();
        TableColumn columnaTabla;
            columnaTabla = modeloColumna.getColumn(0);
            columnaTabla.setPreferredWidth(40);
            columnaTabla = modeloColumna.getColumn(1);
            columnaTabla.setPreferredWidth(100);
            columnaTabla = modeloColumna.getColumn(2);
            columnaTabla.setPreferredWidth(100);
            columnaTabla = modeloColumna.getColumn(3);
            columnaTabla.setPreferredWidth(30);
    }

        initComponents();
        this.setIconImage(new ImageIcon(getClass().getResource("/sistemanortfarma/resources/busyicons/icon_accept.gif")).getImage());
        this.setLocationRelativeTo(null);
        this.jLabel3.setText(msg);
        this.jButton1.requestFocus();
    }

    public int getConfirmar() {
        return confirmar;
    }

    public void setConfirmar(int confirmar) {

    private void Muestra_Tipos_Cambios() {
        List<TipoCambio> misTiposCambios = logventa.Retorna_Tipos_Cambios();

        for (int i = 0; i < misTiposCambios.size(); i++) {
            this.jComboBox1.addItem(misTiposCambios.get(i).getMoneda());
        }
    }


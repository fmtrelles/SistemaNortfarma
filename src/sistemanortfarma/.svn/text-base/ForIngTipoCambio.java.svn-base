    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {

            if (logventa.Verifica_Ingreso_TipoCambio()) {              
                if (this.jTextField1.getText().trim().compareTo("") != 0) {
                    double tipcambio = Double.parseDouble(jTextField1.getText().trim());

                    if (logventa.Ingresa_Tipo_Cambio(tipcambio, idbotica)) {
                        JOptionPane.showMessageDialog(null, " Tipo de Cambio Registrado ", "Nortfarma", JOptionPane.INFORMATION_MESSAGE);
                        obj.marcacdo = false;
                        this.dispose();
                    } else {
                        JOptionPane.showMessageDialog(null, " Error al Ingresar su Tipo de Cambio", "Nortfarma", JOptionPane.ERROR_MESSAGE);
                    }

                } else {
                    JOptionPane.showMessageDialog(null, " Porfavor Ingresa un Tipo de Cambio valido", "Nortfarma", JOptionPane.ERROR_MESSAGE);
                }

            } else {
                JOptionPane.showMessageDialog(null, " El Tipo de Cambio ya a sido Ingresado ", "Nortfarma", JOptionPane.ERROR_MESSAGE);
            }

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(null, " Porfavor Ingresa un Tipo de Cambio valido", "Nortfarma", JOptionPane.ERROR_MESSAGE);
        }
    }//GEN-LAST:event_jButton1ActionPerformed


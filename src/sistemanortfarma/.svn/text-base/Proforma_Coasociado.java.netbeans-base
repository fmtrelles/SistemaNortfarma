    private String idProforma;
    LogicaFechaHora logfecja = new LogicaFechaHora();
    Date fechaInicio = null;
    Object[] datosDetalle = new Object[4];
    private DefaultTableModel model;
    TableColumnModel colModel;
    LogicaProforma logproforma = new LogicaProforma();
    List<Proforma> listproforma = new ArrayList<Proforma>();
    RealizaVenta objventa;

    /** Creates new form Proforma_Coasociado */
    public Proforma_Coasociado(java.awt.Frame parent, boolean modal, String idProforma, RealizaVenta objeto) {
        super(parent, modal);
        initComponents();
        model = (DefaultTableModel) jTable1.getModel();
        objventa = objeto;
        this.setLocationRelativeTo(null);
        colModel = this.jTable1.getColumnModel();
        AparienciaTabla();
        this.idProforma = idProforma;
        this.jLabel6.setText("NÂº - " + idProforma);
        this.jButton1.requestFocus();
        MuestraFecha();
        Recupera_Proforma();
    }

    private void AparienciaTabla() {

        try {

            JTableHeader cabecera = new JTableHeader(colModel);
            cabecera.setReorderingAllowed(false);

            DefaultTableCellRenderer tcenter = new DefaultTableCellRenderer();
            tcenter.setHorizontalAlignment(SwingConstants.CENTER);
            this.jTable1.getColumnModel().getColumn(1).setCellRenderer(tcenter);
            this.jTable1.getColumnModel().getColumn(2).setCellRenderer(tcenter);
            this.jTable1.getColumnModel().getColumn(3).setCellRenderer(tcenter);

        } catch (Exception ex) {
            System.out.println(ex.getMessage());
        }

    }

    private void MuestraFecha() {
        fechaInicio = logfecja.RetornaFecha();
        this.jLabel8.setText(logfecja.ConvierteFecha(fechaInicio));
        this.jLabel10.setText(logfecja.RetornaHora().toString());
    }

    private void Recupera_Proforma() {
        listproforma = logproforma.Recupera_Proforma_Coasociado(idProforma);

        jLabel11.setText("Botica Felicidad  " + listproforma.get(0).getId_Boticas());
        jLabel2.setText(listproforma.get(0).getDescipcionproducto());
        this.txtIgv.setText(String.valueOf(listproforma.get(0).getIGV()));
        this.txtSubtotal.setText(String.valueOf(listproforma.get(0).getSubTotal()));
        this.txtTotal.setText(String.valueOf(listproforma.get(0).getTotal()));

        for (int i = 0; i < listproforma.size(); i++) {
            datosDetalle[0] = listproforma.get(i).getDescipcionproducto();
            datosDetalle[1] = listproforma.get(i).getId_laboratorio();
            datosDetalle[2] = listproforma.get(i).getUNIDAD();
            datosDetalle[3] = listproforma.get(i).getTotal();

            model.addRow(datosDetalle);
        }


    }

    private void Recupera() {
        try {

            listproforma.removeAll(listproforma);
            listproforma = logproforma.Recupera_Proforma_Sensitiva(idProforma, objventa.getIdbotica());
            objventa.AsignaDatos_Proforma(idProforma, listproforma, 0);
            this.dispose();

        } catch (Exception ex) {
            System.out.println("ERROR PROFORMA COASOCIADO " + ex.getMessage());
        }


    }

